{
  "name": "@terna/support-sdk",
  "version": "0.0.1",
  "description": "Client-side diagnostic capture SDK — screenshots, console logs, network activity, browser info — with privacy-first design",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./contract": {
      "import": "./dist/contract/index.mjs",
      "require": "./dist/contract/index.cjs",
      "types": "./dist/contract/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "support",
    "diagnostic",
    "bug-report",
    "screenshot",
    "error-tracking",
    "sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terna-cc/support-sdk.git"
  }
}
