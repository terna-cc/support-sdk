{
  "name": "@terna/support-sdk",
  "version": "0.0.1",
  "description": "Client-side diagnostic capture SDK — screenshots, console logs, network activity, browser info — with privacy-first design",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./contract": {
      "types": "./dist/contract/index.d.ts",
      "import": "./dist/contract/index.mjs",
      "require": "./dist/contract/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "support",
    "diagnostic",
    "bug-report",
    "screenshot",
    "error-tracking",
    "sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terna-cc/support-sdk.git"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "marked": "^17.0.2",
    "modern-screenshot": "^4.6.8"
  }
}
